<Window x:Class="Power_SCADA_Builder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Power_SCADA_Builder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Side panel column -->
            <ColumnDefinition Width="*"/>
            <!-- Main canvas column -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Side panel column -->
            <RowDefinition Height="24"/>
            <!-- Main canvas column -->
        </Grid.RowDefinitions>

        <ListBox x:Name="sidePanel" Grid.Row="0" Grid.Column="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="50" Height="50" Source="{Binding Image}" MouseDown="DefaultImage_Click"/>
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Canvas x:Name="mainCanvas" Grid.Column="1" Grid.Row="0" Background="White" MouseMove="MainCanvas_MouseMove" MouseLeave="MainCanvas_MouseLeave" ScrollViewer.HorizontalScrollBarVisibility="Visible" MinWidth="600">
            <Canvas.Resources>
                <Style TargetType="Image">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="RenderTransformOrigin" Value="0.5, 0.5"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" Direction="315" ShadowDepth="2"/>
                        </Setter.Value>
                    </Setter>
                    <EventSetter Event="MouseDown" Handler="Image_MouseDown"/>
                    <EventSetter Event="MouseMove" Handler="Image_MouseMove"/>
                    <EventSetter Event="MouseUp" Handler="Image_MouseUp"/>
                </Style>
            </Canvas.Resources>
        </Canvas>
        <Button Content="Add Image" Click="AddImage_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10"/>
        <Button Content="Export SVG" Click="ExportSvg_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="80"/>
        <Button Content="Export JSON" Click="ExportJson_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,359,0,0"/>

        <StatusBar Grid.Row="1" Grid.ColumnSpan="2">
            <StatusBarItem>
                <TextBlock x:Name="statusText" Text="Cursor Position: 0, 0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
